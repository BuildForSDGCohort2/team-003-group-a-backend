{
  "name": "educonnecte.com",
  "version": "1.0.0",
  "description": "Educonnecte API build on node.js",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "nyc --reporter=html --reporter=text mocha",
    "dev": "nodemon server.js",
    "transpile": "babel ./src --out-dir dist-src",
    "clean": "rimraf dist-src",
    "build": "npm-run-all clean transpile",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BuildForSDGCohort2/team-003-group-a-backend.git"
  },
  "type": "module",
  "keywords": [
    "Node",
    "Express",
    "REST",
    "API"
  ],
  "author": "team-003-group-a",
  "license": "ISC",
  "engines": {
    "node": "13.2.0"
  },
  "bugs": {
    "url": "https://github.com/BuildForSDGCohort2/team-003-group-a-backend/issues"
  },
  "homepage": "https://github.com/BuildForSDGCohort2/team-003-group-a-backend#readme",
  "dependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "coveralls": "^3.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "mocha": "^8.1.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "devDependencies": {
    "eslint": "^7.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --trailing-comma es5 --single-quote --write"
    ]
  },
  "nyc": {
    "include": [
      "test"
    ]
  }
}
